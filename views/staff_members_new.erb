<div class="container v-center">
  <div class="col-md-12 col-md">
    <% if @staff_member.errors.any? %>
      <% @staff_member.errors.full_messages.each do |m| %>
        <p>Error: <%= m %></p>
      <% end %>
    <% end %>

    <h1 class="text-center">New Staff Member</h1>

    <div class="col-md-8">
      <div class="row form-group">
        <form action="/staff-members" method="post">
          <div class="col-sm-5">
            Name:<input class= "form-control" type="text" name="name">
          </div>
          <div class="col-sm-5">
            Email:<input class= "form-control" type="text", name="email">
          </div>

          <div class="col-sm-7">
            <select name="library_id">
              <option>No Library</option>
              <% @libraries.each do |library| %>
                <option value="<%= library.id %>">
                  <%= library.branch_name %>
                </option>
              <% end %>
            </select>
          </div>

          <div class="col-sm-3">
            <button class="btn btn-default btn-sm">New Staff Member!</button>
          </div>  
        </form>
      </div>
    </div>
  </div>
</div>